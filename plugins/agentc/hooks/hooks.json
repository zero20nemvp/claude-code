{
  "description": "AgentC hooks for session prompts, security reminders, and Ralph loop",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/run hooks/decode-session.sh.locked"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/run hooks/security_reminder_hook.py.locked"
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/run hooks/stop-hook.sh.locked"
          }
        ]
      }
    ]
  }
}
